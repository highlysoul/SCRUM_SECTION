<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="#FFFFFF" />

    <!-- Garis tepi (outline) -->
    <stroke
        android:width="1dp"
        android:color="#760000" />

    <!-- Biar agak membulat -->
    <corners android:radius="12dp" />

    <!-- Padding dalam tombol -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
